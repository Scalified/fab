<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		style="@style/fab_container_base_style"
		android:orientation="vertical"
		>
	<TextView
			style="@style/fab_textview_new_block_style"
			android:text="@string/fab_textview_button_type_text"
			/>
	<RadioGroup
			android:id="@+id/fab_activity_radiogroup_button_type"
			style="@style/fab_radiogroup_style"
			android:orientation="horizontal"
			>
		<RadioButton
				android:id="@+id/fab_activity_radiobutton_default"
				style="@style/fab_radiobutton_style"
				android:text="@string/fab_radiobutton_default_type_text"
				android:checked="true"
				/>
		<RadioButton
				android:id="@+id/fab_activity_radiobutton_mini"
				style="@style/fab_radiobutton_style"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
				android:text="@string/fab_radiobutton_mini_type_text"
				/>
        <RadioButton
                android:id="@+id/fab_activity_radiobutton_big"
                style="@style/fab_radiobutton_horizontal_next_style"
                android:text="@string/fab_radiobutton_big_type_text"
                />
	</RadioGroup>
	<TextView
			style="@style/fab_textview_new_block_style"
			android:text="@string/fab_textview_shadow_radius_text"
			/>
	<SeekBar
			android:id="@+id/fab_activity_seekbar_shadow_radius"
			style="@style/fab_seekbar_style"
			android:max="@integer/fab_seekbar_shadow_radius_max_integer"
			/>
	<TextView
			style="@style/fab_textview_new_block_style"
			android:text="@string/fab_textview_shadow_x_axis_offset_text"
			/>
	<SeekBar
			android:id="@+id/fab_activity_seekbar_shadow_x_offset"
			style="@style/fab_seekbar_style"
			android:max="@integer/fab_seekbar_shadow_x_offset_max_integer"
			/>
	<TextView
			style="@style/fab_textview_new_block_style"
			android:text="@string/fab_textview_shadow_y_axis_offset_text"
			/>
	<SeekBar
			android:id="@+id/fab_activity_seekbar_shadow_y_offset"
			style="@style/fab_seekbar_style"
			android:max="@integer/fab_seekbar_shadow_y_offset_max_integer"
			/>
	<TextView
			style="@style/fab_textview_new_block_style"
			android:text="@string/fab_textview_image_icon_text"
			/>
	<CheckBox
			android:id="@+id/fab_activity_checkbox_default_icon_plus"
			style="@style/fab_checkbox_style"
			android:text="@string/fab_checkbox_default_icon_plus_text"
			/>
	<TextView
			style="@style/fab_textview_new_block_style"
			android:text="@string/fab_textview_button_colors_text"
			/>
	<RadioGroup
			android:id="@+id/fab_activity_radiogroup_colors"
			style="@style/fab_radiogroup_style"
			android:orientation="vertical"
			>
		<!--Populated in code. See FABActivity#initButtonColorsRadioGroup() -->
	</RadioGroup>
	<TextView
			style="@style/fab_textview_new_block_style"
			android:text="@string/fab_textview_stroke_text"
			/>
	<RadioGroup
			android:id="@+id/fab_activity_radiogroup_stroke"
			style="@style/fab_radiogroup_style"
			android:orientation="vertical"
			>
		<!--Populated in code. See FABActivity#initStrokeColorRadioGroup() -->
	</RadioGroup>
	<SeekBar
			android:id="@+id/fab_activity_seekbar_stroke_width"
			style="@style/fab_seekbar_style"
			android:max="50"
			/>
	<TextView
			style="@style/fab_textview_new_block_style"
			android:text="@string/fab_textview_button_behavior_text"
			/>
	<CheckBox
			android:id="@+id/fab_activity_checkbox_hide_and_show_on_click"
			style="@style/fab_checkbox_style"
			android:text="@string/fab_checkbox_hide_and_show_on_click_text"
			/>
	<TextView
			style="@style/fab_textview_new_block_style"
			android:text="@string/fab_textview_animations_text"
			/>
	<RadioGroup
			android:id="@+id/fab_activity_radiogroup_animations"
			style="@style/fab_radiogroup_style"
			android:orientation="vertical"
			>
		<!--Populated in code. See FABActivity#initAnimationsRadioGroup() -->
	</RadioGroup>
</LinearLayout>
